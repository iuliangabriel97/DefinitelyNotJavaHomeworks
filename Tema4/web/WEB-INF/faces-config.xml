<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    
    <application>
        <locale-config>
           <default-locale>en</default-locale>
           <supported-locale>ro</supported-locale>
        </locale-config>
    </application>
    
    <resource-bundle>
        <base-name>strings</base-name>
        <var>strings</var>
    </resource-bundle>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>viewCourses</from-outcome>
            <to-view-id>/pages/view/coursesList.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>viewOptionalCourses</from-outcome>
            <to-view-id>/pages/view/optionalCoursesList.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>viewLecturers</from-outcome>
            <to-view-id>/pages/view/lecturersList.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>viewPackages</from-outcome>
            <to-view-id>/pages/view/coursePackagesList.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>viewStudents</from-outcome>
            <to-view-id>/pages/view/studentList.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>viewIncompleteStudents</from-outcome>
            <to-view-id>/pages/view/studentIncompleteList.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>createCourse</from-outcome>
            <to-view-id>/config/edit/course.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>createLecturer</from-outcome>
            <to-view-id>/config/edit/lecturer.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>createPackage</from-outcome>
            <to-view-id>/config/edit/coursePackage.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>createStudent</from-outcome>
            <to-view-id>/config/edit/student.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>createPreference</from-outcome>
            <to-view-id>/config/edit/preference.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>searchCourses</from-outcome>
            <to-view-id>/pages/view/searchCourses.xhtml?faces-redirect=true</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
</faces-config>